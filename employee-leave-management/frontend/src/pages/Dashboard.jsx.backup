            >
              <div className="flex items-center justify-between">
                <div className="text-left">
                  <p className="text-sm text-blue-100 mb-1">Review Requests</p>
                  <p className="text-2xl font-bold">{stats.pending} Pending</p>
                </div>
                <svg className="w-12 h-12 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                </svg>
              </div>
            </button>

            {user.role === 'admin' && (
              <button
                onClick={() => navigate('/manage-users')}
                className="bg-gradient-to-r from-purple-500 to-purple-600 text-white p-6 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition"
              >
                <div className="flex items-center justify-between">
                  <div className="text-left">
                    <p className="text-sm text-purple-100 mb-1">Manage Users</p>
                    <p className="text-2xl font-bold">User Panel</p>
                  </div>
                  <svg className="w-12 h-12 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </div>
              </button>
            )}

            <div className="bg-gradient-to-r from-green-500 to-green-600 text-white p-6 rounded-xl shadow-lg">
              <div className="flex items-center justify-between">
                <div className="text-left">
                  <p className="text-sm text-green-100 mb-1">Approval Rate</p>
                  <p className="text-2xl font-bold">{leaves.length > 0 ? Math.round((stats.approved / leaves.length) * 100) : 0}%</p>
                </div>
